<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="RedSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlActivated">@color/red</item>
        <item name="android:colorControlNormal">@color/red</item>
    </style>
    <style name="GreenSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorControlNormal">@color/green</item>
    </style>
    <style name="BlueSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:colorControlNormal">@color/blue</item>
    </style>
    <style name="BlueSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:showText">false</item>
        <item name="android:trackTint" tools:targetApi="m">@color/light_blue</item>
    </style>
    <style name="GreenSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/green</item>
        <item name="android:showText">false</item>
        <item name="android:trackTint" tools:targetApi="m">@color/light_green</item>
    </style>
</resources>